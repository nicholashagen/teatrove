<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <groupId>org.teatrove</groupId>
    <artifactId>build-tools</artifactId>
    <version>4.2.0-espn-19-SNAPSHOT</version>
  </parent>

  <groupId>org.teatrove</groupId>
  <artifactId>toolbox</artifactId>
  
  <packaging>jar</packaging>

  <name>Toolbox</name>
  
  <description>Toolkit is a collection of classes used during the build process.</description>
  
 <dependencies>
 
     <dependency>
      <groupId>org.teatrove</groupId>
      <artifactId>trove</artifactId>
    </dependency>
    
     <dependency>
      <groupId>org.teatrove</groupId>
      <artifactId>tea</artifactId>
    </dependency>
    
    <dependency>
      <groupId>joda-time</groupId>
      <artifactId>joda-time</artifactId>
      <version>1.6.2</version>
    </dependency>

  </dependencies>

  <build>

    <plugins>

      <!-- BEGIN ESPN UPDATE: add repackaging plugin -->
      <plugin>
        <groupId>com.espn.maven.plugins</groupId>
        <artifactId>teatrove-legacy-repackager</artifactId>
        <version>${repackaging.plugin.version}</version>
        <executions>
            <execution>
                <goals>
                    <goal>repackage-sources</goal>
                </goals>
            </execution>
        </executions>
        <configuration>
            <outputDirectory>${project.build.directory}/repackaged-sources</outputDirectory>
            <additionalRoots>
                <param>src/main/tea</param>
            </additionalRoots>
        </configuration>  
      </plugin>
      <!-- END ESPN UPDATE -->
      
      <plugin>
        <groupId>org.teatrove</groupId>
        <artifactId>package-info-maven-plugin</artifactId>
        <version>${project.version}</version>
        <configuration>
          <!-- BEGIN ESPN UPDATE: rename from org.teatrove to com.go -->
          <packageRoot>com.go.toolbox</packageRoot>
          <!-- END ESPN UPDATE -->
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>create-package-infos</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    
      <!-- TODO ADD BACK -->
        <plugin>
            <groupId>org.teatrove</groupId>
            <artifactId>teacompiler-maven-plugin</artifactId>
            <version>${project.version}</version>
            <executions>
                <execution>
                    <id>compile-tea</id>
                    <goals>
                        <goal>compile</goal>
                    </goals>
                    <configuration>
                        <force>true</force>
                        <guardian>true</guardian>
                        <!-- BEGIN ESPN UPDATE: use repackaged directories and change org.teatrove to com.go -->
                        <defaultSourceDirectory>${project.build.directory}/repackaged-sources/src/main/tea</defaultSourceDirectory>
                        <rootPackage>com.go.toolbox.beandoc.template</rootPackage>
                        <context>com.go.toolbox.beandoc.BeanDocContext</context>
                        <!-- END ESPN UPDATE -->
                    </configuration>
                </execution>
            </executions>
            <dependencies>
                <dependency>
                    <groupId>org.teatrove</groupId>
                    <artifactId>tea</artifactId>
                    <version>${project.version}</version>
                </dependency>
                <dependency>
                    <groupId>org.teatrove</groupId>
                    <artifactId>trove</artifactId>
                    <version>${project.version}</version>
                </dependency>
            </dependencies>
        </plugin>
    </plugins>

  </build>

</project>
